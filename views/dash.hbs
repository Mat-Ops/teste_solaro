<!DOCTYPE html>
<html lang="pt-BR">
{{> head}}

<body>
{{> navbar_index }}

<!-- Modal de Login -->
{{> login }}

 <!-- Modal de Cadastro -->
 {{> form_cadastro }}

  <div class="container">
    <div class="text-center dashboard-header">
      <h1 class="fw-bold">Dashboard de Energia</h1>
      <p class="text-muted">Visão geral por estado</p>
    </div>

    <!-- Indicadores -->
    <div class="row text-center mb-4">
      <div class="col-md-6 col-lg-3 offset-lg-3 mb-3">
        <div class="card bg-light">
          <h5>Fornecedores</h5>
          <h2 id="num-fornecedores">150</h2>
        </div>
      </div>
      <div class="col-md-6 col-lg-3 mb-3">
        <div class="card bg-light">
          <h5>Consumidores</h5>
          <h2 id="num-consumidores">320</h2>
        </div>
      </div>
    </div>

    <!-- Gráfico de kWh -->
    <div class="card mb-4">
      <h5 class="text-center">kWh Disponíveis por Estado</h5>
      <div class="chart-wrapper">
        <canvas id="kwhChart"></canvas>
      </div>
    </div>

    <!-- Gráficos de pizza -->
    <div class="row mt-10">
      <div class="col-md-6 mb-4">
        <div class="card">
          <h5 class="text-center">Fornecedores por Estado</h5>
          <div class="chart-wrapper">
            <canvas id="fornecedoresChart"></canvas>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-4">
        <div class="card">
          <h5 class="text-center">Consumidores por Estado</h5>
          <div class="chart-wrapper">
            <canvas id="consumidoresChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const estados = [
      "AC","AL","AP","AM","BA","CE","DF","ES","GO","MA","MT","MS","MG",
      "PA","PB","PR","PE","PI","RJ","RN","RS","RO","RR","SC","SP","SE","TO"
    ];

    const kwh = estados.map(() => Math.floor(Math.random() * 10000) + 1000);
    const fornecedores = estados.map(() => Math.floor(Math.random() * 10) + 1);
    const consumidores = estados.map(() => Math.floor(Math.random() * 20) + 1);

    const palette = [
      "#4e73df", "#1cc88a", "#36b9cc", "#f6c23e", "#e74a3b", "#858796",
      "#5a5c69", "#fd7e14", "#20c997", "#6f42c1", "#e83e8c", "#6610f2",
      "#17a2b8", "#198754", "#dc3545", "#0d6efd", "#ffc107", "#6c757d",
      "#795548", "#9c27b0", "#607d8b", "#3f51b5", "#00bcd4", "#009688",
      "#8bc34a", "#ff9800", "#ff5722"
    ];

    // kWh Chart
    new Chart(document.getElementById("kwhChart"), {
      type: "bar",
      data: {
        labels: estados,
        datasets: [{
          label: "kWh Disponíveis",
          data: kwh,
          backgroundColor: "#4e73df",
          borderRadius: 6
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            title: {
              display: true,
              text: 'kWh'
            }
          }
        },
        plugins: {
          legend: { display: false }
        }
      }
    });

    // Fornecedores por Estado
    new Chart(document.getElementById("fornecedoresChart"), {
      type: "doughnut",
      data: {
        labels: estados,
        datasets: [{
          label: "Fornecedores",
          data: fornecedores,
          backgroundColor: palette
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'right',
            labels: {
              boxWidth: 12,
              padding: 10
            }
          }
        }
      }
    });

    // Consumidores por Estado
    new Chart(document.getElementById("consumidoresChart"), {
      type: "doughnut",
      data: {
        labels: estados,
        datasets: [{
          label: "Consumidores",
          data: consumidores,
          backgroundColor: palette
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'right',
            labels: {
              boxWidth: 12,
              padding: 10
            }
          }
        }
      }
    });
  </script>
  
  <!-- Espaçamento -->
  <div style="height: 100px;"></div>

  <!-- Footer e JS -->
  {{> footer }}
</body>
</html>
